function _gcoa() {
    pushd `pwd`

    if [[ $# -eq 0 ]] ; then
        echo "Requires a branch name to checkout"
    else
        echo -e "\n\033[32mChecking out $1 on PHP\033[0m"
        cd ~/wf/php
        git checkout $1

        echo -e "\n\033[32mChecking out $1 on Resources\033[0m"
        cd ~/wf/resources
        git checkout $1

        echo -e "\n\033[32mChecking out $1 on Templates\033[0m"
        cd ~/wf/templates
        git checkout $1
    fi

    popd
}

function _gcob() {
    pushd `pwd`

    if [[ $# -eq 0 ]] ; then
        echo "Requires a branch name to checkout"
    else
        echo -e "\n\033[32mCreating new branch $1 on PHP\033[0m"
        cd ~/wf/php
        git checkout -b $1
        git branch --set-upstream-to=origin/master HEAD

        echo -e "\n\033[32mCreating new branch $1 on Resources\033[0m"
        cd ~/wf/resources
        git checkout -b $1
        git branch --set-upstream-to=origin/master HEAD

        echo -e "\n\033[32mCreating new branch $1 on Templates\033[0m"
        cd ~/wf/templates
        git checkout -b $1
        git branch --set-upstream-to=origin/master HEAD
    fi

    popd
}

function _gpla() {
    pushd `pwd`

    echo -e "\n\033[32mPulling PHP\033[0m"
    cd ~/wf/php
    git pull

    echo -e "\n\033[32mPulling Resources\033[0m"
    cd ~/wf/resources
    git pull

    echo -e "\n\033[32mPulling Templates\033[0m"
    cd ~/wf/templates
    git pull

    popd
}

function _gsa() {
    pushd `pwd`

    echo -e "\n\033[32m== PHP ==\033[0m"
    cd ~/wf/php
    git status

    echo -e "\n\033[32m== Resources ==\033[0m"
    cd ~/wf/resources
    git status

    echo -e "\n\033[32m== Templates ==\033[0m"
    cd ~/wf/templates
    git status

    popd
}

function _gbua() {
    pushd `pwd`

    echo -e "\n\033[32m== PHP ==\033[0m"
    cd ~/wf/php
    git branch --set-upstream-to=origin/master HEAD

    echo -e "\n\033[32m== Resources ==\033[0m"
    cd ~/wf/resources
    git branch --set-upstream-to=origin/master HEAD

    echo -e "\n\033[32m== Templates ==\033[0m"
    cd ~/wf/templates
    git branch --set-upstream-to=origin/master HEAD

    popd
}

function _gbub() {
    if [[ $# -eq 0 ]] ; then
        echo "Requires a branch name to set upstream"
    else
        echo -e "\n\033[32mSetting to track upstream branch: $1\033[0m"
        git branch --set-upstream-to=origin/$1 $1
    fi
}

function _grs() {
    if [[ $# -eq 0 ]] ; then
        echo "Requires the number of commits to reset"
    else
        MESSAGE=`git log -$1 --pretty=format:%h | tail -1 | xargs git log -1 --pretty=format:%B`
        echo -e "\033[32mSquashing the last $1 commits and committing with the following message:\033[0m"
        echo -e "$MESSAGE"
        git reset --soft HEAD~$1
        git commit -m "$MESSAGE" > /dev/null
    fi
}
