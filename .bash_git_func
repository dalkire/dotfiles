function _gcoa() {
    pwd=`pwd`
    PWD=$pwd

    if [[ $# -eq 0 ]] ; then
        echo "Requires a branch name to checkout"
    else
        echo -e "\n\033[32mChecking out $1 on PHP\033[0m"
        cd ~/wf/php
        git checkout $1

        echo -e "\n\033[32mChecking out $1 on Resources\033[0m"
        cd ~/wf/resources
        git checkout $1

        echo -e "\n\033[32mChecking out $1 on Templates\033[0m"
        cd ~/wf/templates
        git checkout $1
    fi

    cd $PWD
}

function _gcob() {
    pwd=`pwd`
    PWD=$pwd

    if [[ $# -eq 0 ]] ; then
        echo "Requires a branch name to checkout"
    else
        echo -e "\n\033[32mCreating new branch $1 on PHP\033[0m"
        cd ~/wf/php
        git checkout -b $1

        echo -e "\n\033[32mCreating new branch $1 on Resources\033[0m"
        cd ~/wf/resources
        git checkout -b $1

        echo -e "\n\033[32mCreating new branch $1 on Templates\033[0m"
        cd ~/wf/templates
        git checkout -b $1
    fi

    cd $PWD
}

function _gpla() {
    pwd=`pwd`
    PWD=$pwd

    echo -e "\n\033[32mPulling PHP\033[0m"
    cd ~/wf/php
    git pull

    echo -e "\n\033[32mPulling Resources\033[0m"
    cd ~/wf/resources
    git pull

    echo -e "\n\033[32mPulling Templates\033[0m"
    cd ~/wf/templates
    git pull

    cd $PWD
}

function _gsa() {
    pwd=`pwd`
    PWD=$pwd

    echo -e "\n\033[32mGit Status: PHP\033[0m"
    cd ~/wf/php
    git status

    echo -e "\n\033[32mGit Status: Resources\033[0m"
    cd ~/wf/resources
    git status

    echo -e "\n\033[32mGit Status: Templates\033[0m"
    cd ~/wf/templates
    git status

    cd $PWD
}

function _gbub() {
    if [[ $# -eq 0 ]] ; then
        echo "Requires a branch name to set upstream"
    else
        echo -e "\n\033[32mSetting to track upstream branch: $1\033[0m"
        git branch --set-upstream-to=origin/$1 $1
    fi
}

